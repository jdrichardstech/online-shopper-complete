<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ../partials/head %>
    <link type="text/css" rel="stylesheet" href="/stylesheets/forms.css" />
    <title>SignIn-Online Shopper</title>
  </head>

  <body>
    <% include ../partials/navbar %>
    <div class="container">
      <div class="row">
        <div
          style="margin-top:85px;"
          class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3 my-form"
        >
          <%/* if (success.length > 0) { */%>

          <!-- <div class="alert alert-danger alert-dismissible">
            <button
              type="button"
              class="close"
              data-dismiss="alert"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
            <%= /*success */%>
          </div>
          <%/* } */%>-->
          <% if (errors > 0) { %>
          <div
            class="alert alert-danger alert-dismissible fade show"
            role="alert"
          >
            <%= errors %>
            <button
              type="button"
              class="close"
              data-dismiss="alert"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <% } %>

          <form
            role="form"
            method="POST"
            action="/api/users/update-profile?_method=PUT"
          >
            <fieldset>
              <h2>Update Profile</h2>
              <hr class="colorgraph" />
              <br />
              <img
                class="profile-imageholder"
                src="/images/profile-imageholder.png"
              />
              <div class="form-group">
                <br />
                <label for="name">Name:</label>
                <input
                  type="text"
                  name="name"
                  id="name"
                  class="form-control input-lg"
                  value="<%=user.profile.name%>"
                />
              </div>
              <div class="form-group">
                <label for="email">Email:</label>
                <input
                  type="email"
                  name="email"
                  id="email"
                  class="form-control input-lg"
                  value="<%=user.email%>"
                />
              </div>
              <div class="form-group">
                <label for="name">Address:</label>
                <input
                  type="text"
                  name="address"
                  id="address"
                  class="form-control input-lg"
                  value="<%=user.address%>"
                />
              </div>
              <br />
              <hr class="colorgraph" />
              <div class="row">
                <div class="col-xs-6 col-sm-6 col-md-6">
                  <input
                    type="submit"
                    class="btn btn-lg btn-success btn-block"
                    value="Update"
                  />
                </div>
              </div>
            </fieldset>
          </form>
        </div>
      </div>
    </div>
    <% include ../partials/scripts %>
  </body>
</html>
